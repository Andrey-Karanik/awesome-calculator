<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@drawable/primary_button_background</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="SecondaryButtonStyle" parent="PrimaryButtonStyle">
        <item name="android:background">@drawable/secondary_button_background</item>
    </style>
    <style name="LandPrimaryButtonStyle" parent="PrimaryButtonStyle">
        <item name="android:layout_height">45dp</item>
    </style>
    <style name="LandSecondaryButtonStyle" parent="LandPrimaryButtonStyle">
        <item name="android:background">@drawable/secondary_button_background</item>
    </style>
</resources>